# Environment: Development
NODE_ENV=development

# Application Configuration
PORT=3000
APP_HOST=localhost
APP_NAME=project-service
APP_VERSION=1.0.0

# Base de données
DATABASE_URL="postgresql://project_user:project_pass@localhost:5432/project_service_dev"

# Configuration de base de données
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=project_user
DB_PASSWORD=project_pass
DB_DATABASE=project_service_dev
DB_TRANSACTION_TIMEOUT=10000
DB_MAX_WAIT=5000
DB_MAX_CONNECTIONS=10

# Cache Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=300
REDIS_MAX_CONNECTIONS=5
REDIS_ENABLE_METRICS=true
REDIS_HEALTH_CHECK_INTERVAL=60000
REDIS_KEY_PREFIX=project-service

# Service d'authentification
AUTH_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_TIMEOUT=5000
AUTH_SERVICE_RETRIES=3

# API Configuration
API_PREFIX=api/v1
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_CORS=true
AUTO_MIGRATE=true

# JWT Configuration (pour l'authentification)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760

# Health Check
HEALTH_CHECK_ENABLED=true

# Metrics
METRICS_ENABLED=true